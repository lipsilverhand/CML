<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team B</title>
    <link rel="stylesheet" href="/teamB.css">
</head>
<body>
    <div class="B">
        <h1>Team Community Kinetics</h1>

        <% const incompleteStudents = []; %>

        <% for (let i = 0; i < dataB.length; i++) { %>
            <% const student = dataB[i]; %>
            <% if (!studentIsComplete(student)) { %>
                <% incompleteStudents.push(student); %>
            <% } %>
        <% } %>
        
        <% if (incompleteStudents.length > 0) { %>
            <ul class="minor">
                <% for (let i = 0; i < incompleteStudents.length; i++) { %>
                    <% const student = incompleteStudents[i]; %>
                        <div class="each">
                            <strong><li"><%= student.name %> is missing the following tasks:</li></strong>
                            <ul>
                                <% if (!student.vision_board) { %>
                                    <li>Vision Board</li>
                                <% } %>
                                <% if (!student.learning_compass) { %>
                                    <li>Learning Compass</li>
                                <% } %>
                                <% if (!student.group_kpi) { %>
                                    <li>Group KPI</li>
                                <% } %>
                                <% if (!student.vision_statement) { %>
                                    <li>Vision Statement</li>
                                <% } %>
                                <% if (!student.company_iceberg) { %>
                                    <li>Company Iceberg</li>
                                <% } %>
                                <% if (!student.knowledge_sharing) { %>
                                    <li>Knowledge Sharing</li>
                                <% } %>
                                <% if (!student.three_skills) { %>
                                    <li>Three Skills</li>
                                <% } %>
                                <% if (!student.links) { %>
                                    <li>Links</li>
                                <% } %>
                            </ul>
                        </div>
                <% } %>
            </ul>
        <% } 

        function studentIsComplete(student) {
            return student.vision_board &&
                   student.learning_compass &&
                   student.group_kpi &&
                   student.vision_statement &&
                   student.company_iceberg &&
                   student.knowledge_sharing &&
                   student.three_skills &&
                   student.links;
        }
        %>
        
    </div>
</body>
</html>